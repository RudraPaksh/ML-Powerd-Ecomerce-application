<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="6dp"
    android:paddingTop="6dp"

    android:paddingRight="6dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="15dp"
            card_view:cardCornerRadius="2dp">


            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="105dp"
                android:layout_height="143dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorLoadingImageViewPlaceholder"
                android:scaleType="fitCenter"

                android:transitionName="MyTransition" />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:layout_marginLeft="3dp"
            android:padding="5dp">


            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Title"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="30dp"/>





            <RelativeLayout
                android:id="@+id/rlContainerFrPriceAmountBts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorTransparent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btPlusItemAmount"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorTransparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plus_svg"
                    android:tint="?attr/colorPrimaryText" />

                <TextView
                    android:id="@+id/tvItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/btPlusItemAmount"
                    android:text="1"
                    android:textColor="?attr/colorPrimaryText"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/btMinusItemAmount"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@id/tvItemAmount"
                    android:background="@color/colorTransparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_minus_svg"
                    android:tint="?attr/colorPrimaryText" />

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Price"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/colorPrimaryText"
                    android:layout_marginTop="0dp"
                    android:textSize="19sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlContainerFrVariety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorTransparent"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tvVarietyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Variety Name"
                    android:textColor="?attr/colorPrimaryText"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvVarietyName">

                    <LinearLayout
                        android:id="@+id/llVarietyContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:background="@color/colorTransparent"
                        android:orientation="horizontal"
                        android:padding="1dp" />
                </HorizontalScrollView>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btDelete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close_svg"
        android:tint="?attr/colorForObjects"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/rlErrorOverlay"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/colorSecondaryAtHalfTransparency"
        android:visibility="gone"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/tvCenterMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Error Message"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            />

    </RelativeLayout>

</RelativeLayout>
