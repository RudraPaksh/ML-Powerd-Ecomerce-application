                       android:id="@+id/tvDescp4"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/tvTimeOfCreation3"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="5dp"
                       android:text="Next step is to Deliver the order and mark it below to notify the buyer when done."
                       android:textSize="15sp"
                       android:padding="5dp"
                       android:layout_alignStart="@id/tvStatus3"
                       android:textColor="#8CD834"
                       android:background="#398CD834"/>-->

                <!--<CheckBox
                    android:id="@+id/cb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTimeOfCreation4"
                    android:layout_alignStart="@id/tvTimeOfCreation4"
                    android:buttonTint="@color/colorSecondary"
                    android:layout_marginTop="10dp"
                    android:text="Order Delivered"
                    android:textColor="@color/colorLightGrayForSubHeaderTvs"
                    />-->


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl4"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_dot_svg"
                    android:tint="@color/colorRed" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv5"
                    android:layout_alignStart="@id/iv5"
                    android:layout_alignBottom="@id/tvTimeOfCreation5"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorRed" />


                <TextView
                    android:id="@+id/tvStatus5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/iv5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Order Cancelled by you or Seller or order returned"
                    android:textColor="@color/colorRed"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTimeOfCreation5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStatus5"
                    android:layout_alignStart="@id/tvStatus5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="12:360Am"
                    android:textSize="13sp" />

