                    android:textColor="@color/colorSecondary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTimeOfCreation3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStatus3"
                    android:layout_alignStart="@id/tvStatus3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="12:360Am"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvDescp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTimeOfCreation3"
                    android:layout_alignStart="@id/tvStatus3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#398CD834"
                    android:padding="5dp"
                    android:text="Next step is to Deliver the order and mark it below to notify the buyer when done."
                    android:textColor="#8CD834"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescp3"
                    android:layout_alignStart="@id/tvStatus3"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/colorSecondary"
                    android:text="Order Delivered"
                    android:textColor="@color/colorLightGrayForSubHeaderTvs" />

                <ProgressBar
                    android:id="@+id/pb3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/cb3"
                    android:layout_alignTop="@id/cb3"
                    android:layout_margin="10dp"
                    android:indeterminateTint="@color/colorSecondary"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl3"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_dot_svg" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv4"
                    android:layout_alignStart="@id/iv4"
                    android:layout_alignBottom="@id/tvTimeOfCreation4"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorSecondary" />


                <TextView
                    android:id="@+id/tvStatus4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/iv4"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Order Deliverd"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTimeOfCreation4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStatus4"
                    android:layout_alignStart="@id/tvStatus4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="12:360Am"
                    android:textSize="13sp" />

