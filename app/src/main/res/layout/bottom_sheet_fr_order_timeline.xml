            </RelativeLayout>
            
            <LinearLayout
                android:id="@+id/llAddressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="#398CD834"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tvRecieverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#8CD834"                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAreaStateCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:textColor="#8CD834"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvHouseNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:textColor="#8CD834"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/bg_layout_border"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel/Return This order"
                    android:textColor="@color/colorRed"
                    android:textSize="18dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="5dp"
                    />

             <include layout="@layout/inflate_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate This Item"
                    android:textColor="@color/colorGreen"
                    android:textSize="18dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="5dp"
                    />
                <include layout="@layout/inflate_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Invoice"
                    android:textColor="@color/colorGreen"
                    android:textSize="18dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="5dp"
                    />
                <include layout="@layout/inflate_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conatct Us"
