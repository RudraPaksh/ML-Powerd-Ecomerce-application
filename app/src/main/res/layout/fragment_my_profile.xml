<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.shubh.e_comm_ver1.MyProfile.MyProfileFragment"
    android:background="?attr/colorPrimary"
    android:clickable="true">

    <!--to achieb=ve circle look ..the cardCornerRadius should be exacly the half of the hieght or width -->
<!--It looks non circular here in preview because of its child layout ..but that child wont cross card border in real screen-->
    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="-115dp"
        android:layout_marginLeft="0dp"
        android:elevation="0dp"
        android:innerRadius="225dp"
        android:shape="ring"
        app:cardCornerRadius="225dp"
        app:cardElevation="00dp"
        android:rotation="120">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_gradient"
            android:alpha=".7"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="-100dp"

        android:elevation="0dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="75dp"
        app:cardElevation="00dp"
        android:rotation="30">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_gradient"
            android:alpha=".7"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="-40dp"

        android:elevation="0dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="180dp"
        app:cardElevation="00dp"
        android:rotation="30">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_gradient"
            android:alpha=".7"/>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" @color/colorTransparent"
        android:elevation="10dp"

        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:padding="4dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btCloseFrag"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back_svg"
            android:tint="?attr/colorPrimaryText"

            />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:elevation="10dp"

        android:layout_below="@id/toolbar"
        android:fontFamily="@font/adamina"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:text="My Profile"
        android:textAlignment="textStart"
        android:textColor="?attr/colorPrimaryText"

        android:textSize="35sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_below="@id/Header"
        android:layout_margin="15dp"
        android:elevation="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp"
        android:visibility="visible">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="10dp">

           <androidx.cardview.widget.CardView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:elevation="0dp"
               android:innerRadius="0dp"
               android:shape="ring"
               app:cardCornerRadius="50dp"
            android:layout_margin="15dp"
               android:layout_gravity="center_horizontal">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:srcCompat="@drawable/my_profile"
               android:tint="?attr/colorForObjects"
               android:padding="15dp"/>
           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/tv_for_nav_dr_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="2dp"

               android:gravity="center_horizontal"
               android:text="Name"
               android:maxLines="1"
               android:ellipsize="end"
               android:textColor="?attr/colorPrimaryText"
               android:fontFamily="sans-serif-medium"
               android:textSize="24dp" />

           <TextView
               android:id="@+id/tv_for_nav_dr_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="0dp"
               android:gravity="center_horizontal"
               android:text="email"
               android:textColor="?attr/colorPrimaryText"
               android:maxLines="1"
               android:ellipsize="end"
               android:textSize="18sp"
               android:layout_marginBottom="10dp"
/>
       </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_below="@id/cvContainer">

        <LinearLayout
            android:id="@+id/llMyAdresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="0dp">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                app:srcCompat="@drawable/my_profile"
                android:tint="?attr/colorSecondaryText"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="My Adresses"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="21sp"
                android:fontFamily="sans-serif-medium"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDeleteAccountBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="0dp">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_delete_svg"
                android:tint="?attr/colorSecondaryText"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="Delete Account"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="21sp"
                android:fontFamily="sans-serif-medium"
                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_margin="10dp"
        android:text="Version 1.0 (Dev -Shubhashish)"
        android:textColor="?attr/colorSecondaryText"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"
        />

</RelativeLayout>