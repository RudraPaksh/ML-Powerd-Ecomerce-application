<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_layout_border">



    <TextView
        android:id="@+id/tvOrdreNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order no 10006"
        android:textColor="?attr/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOrdrePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Rs 160"
        android:textColor="?attr/colorPrimaryText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimeOfCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOrdreNo"
        android:layout_marginTop="3dp"
        android:text="12:360Am"
        android:textColor="?attr/colorSecondaryText"
        android:textSize="17sp" />


    <LinearLayout
        android:id="@+id/rlContainerFrInlatedItems"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
        android:layout_below="@id/tvTimeOfCreation"
        android:orientation="vertical"

        >
        </LinearLayout>




</RelativeLayout>




