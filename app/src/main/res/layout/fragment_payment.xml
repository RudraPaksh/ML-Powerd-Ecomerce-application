<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRootFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:clickable="true"
    tools:context="io.shubh.e_comm_ver1.PaymentFragments.View.PaymentFragment">


    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:elevation="0dp"

        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:padding="4dp"
        android:visibility="visible"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--TODo -make the below bt color more light-->
        <ImageButton
            android:id="@+id/btCloseFrag"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back_svg"
            android:tint="?attr/colorPrimaryText"

            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/id_fr_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/adamina"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingRight="15dp"
        android:text="Payment"
        android:textColor="?attr/colorPrimaryText"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_fr_tv_header"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Subtotal"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="160"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Discount"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5%"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Shipping"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="10"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/colorForObjects" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="10"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btCheckout"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:background="#398CD834"
        android:text="Use card no 4111 1111 1111 1111 and random details for testing card payment."
        android:textColor="#8CD834"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/bg_gradient_gradient"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Checkout"
        android:textColor="?attr/colorPrimary" />


    <!--=======================================================-->
    <RelativeLayout
        android:id="@+id/rlPaymentStatusOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:clickable="true"
        android:visibility="gone">
        <!-- TODO: Update blank fragment layout -->

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
android:layout_marginBottom="-50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/viewForCenterReferenceFrOthrViews"
            android:elevation="15dp"
            app:cardBackgroundColor="#F1F0F0"
            app:cardCornerRadius="@dimen/_125sdp"
            android:alpha=".4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="40dp"
                    android:elevation="15dp"
                    app:cardBackgroundColor="#D8D7D7"
                    app:cardCornerRadius="115dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivThumbs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="40dp"
                            android:src="@drawable/ic_thumbs_up_svg"

                            />



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/viewForCenterReferenceFrOthrViews"
            android:layout_width="1dp"
            android:layout_height="1dp"
android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btOfMessageScreen"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:padding="20dp"
            android:text=" card payment"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimaryText"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btOfMessageScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient_gradient"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Checkout"
            android:textColor="?attr/colorPrimary" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlDimBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:clickable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_container_loaading_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_above="@id/viewForCenterReferenceFrOthrViews2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_loading_gif"
                android:layout_width="120dp"
                android:layout_height="120dp"
                />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/viewForCenterReferenceFrOthrViews2"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvNote"
            android:padding="10dp"
            android:text="0%"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimaryText"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:padding="20dp"
            android:text="Payment Recieved \n Doing Post Processing,\n Don't close the page or press back."
            android:textAlignment="center"
            android:textColor="?attr/colorSecondaryText"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>