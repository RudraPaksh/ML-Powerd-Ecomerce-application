<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:clickable="true"
    tools:context="io.shubh.e_comm_ver1.SearchPage.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/tab_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:elevation="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
android:layout_marginBottom="-3dp"
                android:iconifiedByDefault="false"
                android:queryHint="Search a product"
                app:defaultQueryHint="Search a product"
                app:iconifiedByDefault="false"
                app:queryHint="Search a product" />

        </androidx.cardview.widget.CardView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ScrollView
                android:id="@+id/page_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Search by an Image\n of any Object"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="?attr/colorPrimaryText"
                            android:textSize="@dimen/_25sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv1"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/tv1"
                            app:cardCornerRadius="8dp">

                            <ImageButton
                                android:id="@+id/ibt1Info"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@color/colorSecondary"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_info_svg"
                                android:tint="?attr/colorPrimary"

                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"
                            android:text="Provide an Image of object and let the app identify the object(using object recognition Machine Learning algo.) and search the same on the platform"
                            android:textColor="?attr/colorSecondaryText"
                            android:textSize="@dimen/_14sdp" />


                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/object_detection" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="Tip : Use white background such as a sheet of paper for better results."
                            android:textColor="?attr/colorSecondaryText"
                            android:textSize="@dimen/_11sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"

                                android:layout_marginLeft="@dimen/_22sdp"
                                android:layout_marginTop="@dimen/_22sdp"

                                android:layout_marginRight="@dimen/_22sdp"


                                android:elevation="6dp"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:id="@+id/bt_camera1"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@layout/gradient"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="vertical"

                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Camera"
                                        android:textColor="?attr/colorPrimary"
                                        android:textSize="@dimen/_15sdp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/bt_gallery1"

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"

                                android:layout_below="@id/cv1"
                                android:layout_marginLeft="@dimen/_25sdp"

                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal"
                                    android:text="Gallery"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/page_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Search by a Text \nOn Image"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="?attr/colorPrimaryText"
                            android:textSize="@dimen/_25sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv11"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/tv11"
                            app:cardCornerRadius="8dp">

                            <ImageButton
                                android:id="@+id/ibt2Info"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@color/colorSecondary"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_info_svg"
                                android:tint="?attr/colorPrimary"

                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv11"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"
                            android:text="Provide an Image of object and let the app identify the text in the image(using Text recognition Machine Learning algo.) and search the same on the platform"
                            android:textColor="?attr/colorSecondaryText"
                            android:textSize="@dimen/_14sdp" />


                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/text_recognition" />

                        <TextView
                            android:id="@+id/tv33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="Tip : Use white background such as a sheet of paper for better results."
                            android:textColor="?attr/colorSecondaryText"
                            android:textSize="@dimen/_11sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv22"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"

                                android:layout_marginLeft="@dimen/_25sdp"
                                android:layout_marginTop="@dimen/_25sdp"

                                android:layout_marginRight="@dimen/_25sdp"


                                android:elevation="6dp"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:id="@+id/bt_camera22"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@layout/gradient"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="vertical"

                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Camera"
                                        android:textColor="?attr/colorPrimary"
                                        android:textSize="@dimen/_15sdp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/bt_gallery22"

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"

                                android:layout_below="@id/cv22"
                                android:layout_marginLeft="@dimen/_25sdp"

                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal"
                                    android:text="Gallery"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>


        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:theme="@style/Base.Widget.Design.TabLayout"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@color/colorSecondary"
            android:layout_alignParentBottom="true"/>


    <!--=========================BottomSheet Container===========================-->

    <!--background dimmer view-->

    <!--below cooordinatorlayout id for bootomsheet to inflate-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/touch_to_dismiss_bottom_sheet_dim_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9000"
            android:clickable="true"
            android:visibility="gone" />

        <!--below bttm sheet is inflated dynamically-->
<!--        <include layout="@layout/bottom_sheet_fr_ml_object_detect_results_fr_search_frag" />-->


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>