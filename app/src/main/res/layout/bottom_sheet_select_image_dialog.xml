<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root_view_bttm_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"

    android:background="@color/colorTransparent"
    android:clickable="true"
   >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
   >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_photos_svg"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Upload Photo"
        android:textColor="@color/colorGrayForHeaderTvs"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:padding="10dp">

        <Button
            android:id="@+id/bt_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_gradient"
            android:text="Camera"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/bt_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_border"
            android:text="Gallery"
            android:textColor="@color/colorSecondary"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>