<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container_of_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_ctgr_indicator"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvRecieverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Name"
            android:textColor="?attr/colorPrimaryText"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvAreaStateCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="?attr/colorSecondaryText"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvHouseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="?attr/colorSecondaryText"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ctgr_indicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="2dp"
        android:tint="?attr/colorForObjects" />
</RelativeLayout>


